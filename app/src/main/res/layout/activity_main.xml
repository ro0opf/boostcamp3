<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="ctrl"
                  type="com.example.jaehyeok.boostcamp3.act.MainController"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".act.MainActivity">
        <include
                layout="@layout/toolbar"
                android:id="@+id/inc_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"/>
        <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animation_view"
                app:lottie_autoPlay="false"
                android:visibility="invisible"
                app:lottie_loop="true"
                app:lottie_fileName="loading.json"
                app:layout_constraintTop_toBottomOf="@id/inc_toolbar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="0dp"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.4"
                android:layout_height="0dp"/>
        <EditText
                android:id="@+id/edt_keyword"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:paddingStart="15dp"
                app:layout_constraintTop_toBottomOf="@id/inc_toolbar"
                app:layout_constraintRight_toLeftOf="@id/bt_search"
                app:layout_constraintBottom_toTopOf="@id/rcv_main"
                app:layout_constraintHeight_percent="0.1"
                app:layout_constraintWidth_percent="0.8"
                app:layout_constraintHeight_default="percent"
                app:layout_constraintWidth_default="percent"/>
        <Button
                android:id="@+id/bt_search"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="검색"
                android:onClick="@{ctrl::onClickSearch}"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintHeight_default="percent"
                app:layout_constraintWidth_percent="0.2"
                app:layout_constraintHeight_percent="0.1"
                app:layout_constraintTop_toBottomOf="@id/inc_toolbar"
                app:layout_constraintBottom_toTopOf="@id/rcv_main"
                app:layout_constraintLeft_toRightOf="@+id/edt_keyword"/>
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_main"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/edt_keyword"
                app:layout_constraintBottom_toBottomOf="parent"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>